@{
  Layout = "_MachineLayout";
}

@model Factory.Models.Machine;

<h1>Add a Engineer to @Model.Name</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select Engineer: ")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Add Engineer" class="btn btn-success"/>
}

<button class="btn btn-dark">@Html.ActionLink("Back to Machine", "Details", new { id = Model.MachineId })</button>